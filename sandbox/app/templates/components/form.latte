


<form n:name=$form class="form-horizontal">
<ul class=error n:if="$form->ownErrors">
	<li n:foreach="$form->ownErrors as $error">{$error}</li>
</ul>

<div n:foreach="$form->controls as $input" n:class="$input->required ? required, form-group">
	<div class="col-sm-2 control-label">{label $input /}</div>
	<div class="col-sm-10">
		{*bootstrapinput $input*} <span class=error n:ifcontent>{$input->error}</span>
		{BootstrapMacro::render($input)}
	</div>
</div>

</form>
