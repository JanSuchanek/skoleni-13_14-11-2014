parameters:
	user: root
	dbhost: 127.0.0.1

php:
	date.timezone: Europe/Prague

nette:
	application:
		errorPresenter: Error
		mapping:
			*: App\*Module\Presenters\*Presenter

	session:
		expiration: 14 days

	container:
		debugger: yes

	security:
		users:
			franta: xxx
			pepa: yyy

extensions:
#	presenter: PresenterExtension


decorator:
	Nette\Application\UI\Presenter:
	#	inject: yes

services:
	#- Nette\Security\SimpleAuthenticator([franta: xxx, pepa: yyy])

	-
		factory: PdoFactory::create('mysql:host=%dbhost%', %user%)
		setup:
			- setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION)

		#class: PDO

	#pdofac2: PdoFactory2('mysql:host=%dbhost%')

	#- @pdofac2::create(%user%)::query()

	#- PdoFactory2('mysql:host=%dbhost%')::create(%user%)

	- App\Model\Article(123)

	#two: App\Model\Article(999)

	#two: {factory: App\Model\Article(999)}

	two:
		factory: App\Model\Article(999)
		autowired: no


	form:
		implement: FormFactory
		parameters: [a]
		factory: Nette\Application\UI\Form
		setup:
			- addText(name, Jm√©no, NULL, %a%)
			- addSubmit(send, Odeslat)
			- setTranslator()

	translator: MyTranslator

	#- App\Model\UserManager(..., ..., @two)
	- App\Forms\SignFormFactory
	router: App\RouterFactory()::createRouter
